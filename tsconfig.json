{
	"compilerOptions": {
		"module": "commonjs",
//		"noImplicitAny": true,
		"target": "es5",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"allowJs": true,
		"outDir": "dist"
	},
	"lib": [
		"es2015"
	],
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
	]
}
